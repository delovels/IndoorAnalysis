<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_system"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bupt.indooranalysis.AboutSystemActivity">


    <include layout="@layout/toolbar_backward"/>
    <RelativeLayout
        android:id="@+id/as_two_dimensional_bar"
        android:layout_width="match_parent"
        android:layout_height="258dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/two_dimensional_bar_code"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            android:src="@drawable/two_dimensional_code" />


    </RelativeLayout>

    <ListView
        android:id="@+id/about_system_list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/as_two_dimensional_bar"
        android:layout_below="@+id/as_two_dimensional_bar"
        android:dividerHeight="3dp" >
    </ListView>

</RelativeLayout>
